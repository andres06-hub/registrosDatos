<?xml version="1.0" encoding="utf-8"?>
<!-- El layer-list es un listado de capas -->
<layer-list android:opacity="opaque"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!--Se define el color de fondo-->
    <item android:drawable="@color/color_primary"/>

    <item
        android:left="10dp"
        android:right="10dp"
        android:top="260dp"
        android:bottom="260dp">
        <bitmap android:src="@drawable/splashlogo"/>

    </item>

</layer-list>