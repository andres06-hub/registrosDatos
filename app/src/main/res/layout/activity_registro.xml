<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECECEC"
    android:orientation="vertical"
    tools:context=".RegistroActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="24dp">


    <!--Data Subjects-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/textView"
                    style="@style/App.txtAnunLeft"
                    android:layout_width="257dp"
                    android:layout_height="50dp"
                    android:drawableLeft="@drawable/ic_baseline_book_24"
                    android:gravity="center"
                    android:paddingLeft="100dp"
                    android:text="@string/register"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.043" />

            </FrameLayout>

            <!--Data Strudent-->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#C3CCDF">


                    <EditText
                        android:id="@+id/txtDocument"
                        android:layout_width="300dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="24dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="@string/document"
                        android:inputType="textPersonName"
                        android:textColor="@color/black"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView" />

                    <EditText
                        android:id="@+id/txtName"
                        android:layout_width="300dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="@string/fullName"
                        android:inputType="textPersonName"
                        android:textColor="@color/black"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/editTxtDocument" />

                    <EditText
                        android:id="@+id/txtAge"
                        android:layout_width="300dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="@string/age"
                        android:inputType="number"
                        android:textColor="@color/black"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/editTxtName" />

                    <EditText
                        android:id="@+id/txtPhoneNumber"
                        android:layout_width="300dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="@string/phoneNumber"
                        android:inputType="number"
                        android:textColor="@color/black"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/editTxtAge" />

                    <EditText
                        android:id="@+id/txtDirection"
                        android:layout_width="300dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="24sp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="@string/direction"
                        android:inputType="textPersonName"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toTopOf="@+id/divider"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/editTxtPhoneNumber"
                        app:layout_constraintVertical_bias="0.411" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>



            <!--Materias-->



            <View
                android:id="@+id/divider"
                android:layout_width="409dp"
                android:layout_height="10dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="430dp" />

            <TextView
                android:id="@+id/textViewSubjects"
                style="@style/App.txtAnunLeft"
                android:layout_width="257dp"
                android:layout_height="45dp"
                android:layout_marginTop="30dp"
                android:drawableLeft="@drawable/ic_baseline_subject_24"
                android:gravity="center"
                android:paddingLeft="90dp"
                android:text="@string/subjects"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider"
                app:layout_constraintVertical_bias="0.0" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#C3CCDF"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        >

                        <TextView
                            android:id="@+id/txtNameMatter1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="80dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginBottom="0dp"
                            android:text="Programming"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/editTxtValue"
                            app:layout_constraintHorizontal_bias="0.372"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textViewSubjects"
                            app:layout_constraintVertical_bias="1.0" />

                        <EditText
                            android:id="@+id/txtValue1"
                            android:layout_width="179dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="0dp"
                            android:layout_weight="1"
                            android:ems="10"
                            android:hint="Value"
                            android:textColor="@color/black"
                            android:inputType="number"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textViewSubjects"
                            app:layout_constraintVertical_bias="1.0" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="25dp"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/txtNameMatter2"
                            android:layout_width="150dp"
                            android:layout_height="57dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="0dp"
                            android:text="Maths"
                            android:textStyle="bold"
                            android:inputType="textPersonName"
                            android:textColor="@color/black"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/editTxtValue"
                            app:layout_constraintHorizontal_bias="0.372"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textViewSubjects"
                            app:layout_constraintVertical_bias="1.0" />

                        <EditText
                            android:id="@+id/txtValue2"
                            android:layout_width="179dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:ems="10"
                            android:hint="Value"
                            android:textColor="@color/black"
                            android:inputType="number"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textViewSubjects"
                            app:layout_constraintVertical_bias="1.0" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        >

                        <TextView
                            android:id="@+id/txtNameMatter3"
                            android:layout_width="172dp"
                            android:layout_height="57dp"
                            android:layout_marginRight="0dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="0dp"
                            android:text="Data Bases"
                            android:textStyle="bold"
                            android:inputType="textPersonName"
                            android:textColor="@color/black"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/editTxtValue"
                            app:layout_constraintHorizontal_bias="0.372"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textViewSubjects"
                            app:layout_constraintVertical_bias="1.0" />

                        <EditText
                            android:id="@+id/txtValue3"
                            android:layout_width="179dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="0dp"
                            android:layout_weight="1"
                            android:ems="10"
                            android:hint="Value"
                            android:textColor="@color/black"
                            android:inputType="number"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textViewSubjects"
                            app:layout_constraintVertical_bias="1.0" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        >

                        <TextView
                            android:id="@+id/txtNameMatter4"
                            android:layout_width="165dp"
                            android:layout_height="57dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="0dp"
                            android:text="English"
                            android:textStyle="bold"
                            android:inputType="textPersonName"
                            android:textColor="@color/black"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/editTxtValue"
                            app:layout_constraintHorizontal_bias="0.372"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textViewSubjects"
                            app:layout_constraintVertical_bias="1.0" />

                        <EditText
                            android:id="@+id/txtValue4"
                            android:layout_width="179dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="0dp"
                            android:layout_weight="1"
                            android:ems="10"
                            android:hint="Value"
                            android:textColor="@color/black"
                            android:inputType="number"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textViewSubjects"
                            app:layout_constraintVertical_bias="1.0" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        >

                        <TextView
                            android:id="@+id/txtNameMatter5"
                            android:layout_width="162dp"
                            android:layout_height="57dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="0dp"
                            android:text="software architecture"
                            android:textStyle="bold"
                            android:inputType="textPersonName"
                            android:textColor="@color/black"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/editTxtValue"
                            app:layout_constraintHorizontal_bias="0.372"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textViewSubjects"
                            app:layout_constraintVertical_bias="1.0" />

                        <EditText
                            android:id="@+id/txtValue5"
                            android:layout_width="179dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="0dp"
                            android:layout_weight="1"
                            android:ems="10"
                            android:hint="Value"
                            android:textColor="@color/black"
                            android:inputType="number"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textViewSubjects"
                            app:layout_constraintVertical_bias="1.0" />
                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>




            <!--Button Send Data-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp">

                <Button
                    android:id="@+id/btnEnviar"
                    style="@style/btnRegister"
                    android:layout_width="110dp"
                    android:layout_height="43dp"
                    android:layout_marginBottom="0dp"
                    android:drawableLeft="@drawable/ic_baseline_how_to_reg_24"
                    android:paddingLeft="15dp"
                    android:paddingRight="10dp"
                    android:text="Send"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.496"
                    app:layout_constraintStart_toStartOf="parent" />
            </LinearLayout>
            <!--Button Back-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="50dp">

                <Button
                    android:id="@+id/btnReturn"
                    style="@style/btnRegister"
                    android:layout_width="110dp"
                    android:layout_height="43dp"
                    android:layout_marginBottom="0dp"
                    android:drawableLeft="@drawable/return_button"
                    android:paddingLeft="15dp"
                    android:paddingRight="10dp"
                    android:text="return"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.496"
                    app:layout_constraintStart_toStartOf="parent" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>